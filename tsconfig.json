{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "paths": {
      "$lib": [
        "./src/lib"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$components": [
        "./src/lib/components"
      ],
      "$components/*": [
        "./src/lib/components/*"
      ],
      "$ui": [
        "./src/lib/components/ui"
      ],
      "$ui/*": [
        "./src/lib/components/ui/*"
      ],
      "$pages": [
        "./src/pages"
      ],
      "$pages/*": [
        "./src/pages/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
}